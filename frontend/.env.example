# Proton Prediction Market - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# PROTON NETWORK CONFIGURATION
# =============================================================================

# Proton RPC Endpoint
# Testnet: https://testnet.protonchain.com
# Mainnet: https://proton.greymass.com
REACT_APP_PROTON_ENDPOINT=https://testnet.protonchain.com

# Proton Chain ID
# Testnet: 71ee83bcf52142d61019d95f9cc5427ba6a0d7ff8accd9e2088ae2abeaf3d3dd
# Mainnet: 384da888112027f0321850a169f737c33e53b388aad48b5adace4bab97f437e0
REACT_APP_CHAIN_ID=71ee83bcf52142d61019d95f9cc5427ba6a0d7ff8accd9e2088ae2abeaf3d3dd

# =============================================================================
# SMART CONTRACT CONFIGURATION
# =============================================================================

# Smart Contract Account Name
# This should match the account name where your prediction market contract is deployed
REACT_APP_CONTRACT_NAME=prediction

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Public URL (optional)
# If deploying to a subdirectory, set this to the subdirectory path
# Example: /app for pawnline.io/app
# Leave empty or set to / for root domain deployment
# PUBLIC_URL=/

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================

# Google Analytics Tracking ID (optional)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking (optional)
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode (optional, for development only)
# REACT_APP_DEBUG=true

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Environment variables MUST start with REACT_APP_ to be accessible in React
# 2. These values are BAKED INTO THE BUILD - you must rebuild after changes
# 3. Never commit .env files with sensitive data to version control
# 4. For production, use mainnet endpoints and chain ID
# 5. For testing, use testnet endpoints and chain ID
#
# =============================================================================
